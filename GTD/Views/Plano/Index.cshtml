@model IEnumerable<GTD.Models.Plano>

@{
    ViewData["Title"] = "Lista de Planos";
}

<div class="main">
    <div class="indicador">
        <h2>Todos os Planos</h2>
        <a asp-action="Create" class="criar-novo">
            <span class="icone criar"></span>
        </a>
    </div>

    <table class="table-fill">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PlanoNome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duracao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Completo)
                </th>
                <th>Operações</th>
            </tr>
        </thead>
        <tbody class="table-hover">
            @foreach (var item in Model)
            {
                <tr>
                    <td data-href="@Url.Action("Details", "Plano", new { id = item.PlanoID })">
                        @Html.DisplayFor(modelItem => item.PlanoNome)
                    </td>
                    <td data-href="@Url.Action("Details", "Plano", new { id = item.PlanoID })">
                        @Html.DisplayFor(modelItem => item.Duracao)
                    </td>
                    <td data-href="@Url.Action("Details", "Plano", new { id = item.PlanoID })">
                        @Html.DisplayFor(modelItem => item.Completo)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PlanoID"><span class="icone editar"></span></a>
                        @*<a asp-action="Details" asp-route-id="@item.PlanoID">Details</a> |*@
                        <a href="#deleteModal" rel="modal:open" id="abre-mol"
                           data-route="/Dieta/Delete/@item.PlanoID" data-id=@item.PlanoID data-name="@item.PlanoNome"><span class="icone deletar"></span></a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>