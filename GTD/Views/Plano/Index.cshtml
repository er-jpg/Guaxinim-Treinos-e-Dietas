@model IEnumerable<GTD.Models.Plano>

@{
    ViewData["Title"] = "Lista de Planos";
}

<div class="section"></div>
<main>
    <div class="container">
        <div class="row">
            <div class="col s12 center-align">
                <h5 class="blue-grey-text">Todos os treinos</h5>
                <a asp-action="Create" class="criar-novo grey darken-3 btn">
                    <span style="display:inline-block;vertical-align: 5px;">Adicionar</span>
                    <i class="material-icons white-text">
                        add_box
                    </i>
                </a>
            </div>
        </div>

        <div class="blue-grey lighten-5 row">
            <div class="col s12">
                <table class="highlight responsive-table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Selecionado)</th>
                            <th>@Html.DisplayNameFor(model => model.PlanoNome)</th>
                            <th>@Html.DisplayNameFor(model => model.Duracao)</th>
                            <th>@Html.DisplayNameFor(model => model.Completo)</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                <tr>
                    <td data-href="@Url.Action("Details", "Plano", new { id = item.PlanoID })">
                        <label>
                            <input type="checkbox" name="Selecionado" id="Selecionado" value="true" class="filled-in" @(item.Selecionado ? "checked" : "") disabled />
                            <span></span>
                        </label>
                    </td>
                    <td data-href="@Url.Action("Details", "Plano", new { id = item.PlanoID })">
                        @Html.DisplayFor(modelItem => item.PlanoNome)
                    </td>
                    <td data-href="@Url.Action("Details", "Plano", new { id = item.PlanoID })">
                        @Html.DisplayFor(modelItem => item.Duracao)
                    </td>
                    <td data-href="@Url.Action("Details", "Plano", new { id = item.PlanoID })">
                        <label>
                            <input type="checkbox" name="Completo" id="Completo" value="true" class="filled-in" @(item.Completo ? "checked" : "") disabled />
                            <span></span>
                        </label>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PlanoID" class="btn cyan"><i class="material-icons">edit</i></a>
                        <a href="#" class="btn red delete-item"
                           data-route="/Plano/Delete/" data-id=@item.PlanoID>
                            <i class="material-icons">delete</i>
                        </a>
                    </td>
                </tr>
                    }
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</main>