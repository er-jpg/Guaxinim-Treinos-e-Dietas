@model GTD.Models.Infra.Cadastro

@{
    ViewData["Title"] = "Register";
}

<div class="section"></div>
<main>
    <center>

        <h5 class="blue-grey-text">Registrando novo usuário</h5>
        <div class="section"></div>

        <div class="container">
            <div class="blue-grey lighten-5 row" style="padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="frm">
                    <div class='row'>
                        <div class='col s12'>
                            <div asp-validation-summary="All" class="erro"></div>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='input-field col s12'>
                            <input class='validate' type='text' id='user' asp-for="User" />
                            <label for='User'>Usuário</label>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='input-field col s12'>
                            <input class='validate' type='email' id='email' asp-for="Email" />
                            <label for='User'>Email</label>
                            <span class="helper-text" data-error="wrong" data-success="right">Será o email que você fará login no sistema</span>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='input-field col s12'>
                            <input class='validate' type='password' id='password' asp-for="Password" />
                            <label for='password'>Senha</label>
                            <span class="helper-text">A senha deve ser maior que 6 caracteres</span>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='input-field col s12'>
                            <input class='validate' type='password' id='password' asp-for="ConfirmPassword" />
                            <label for='password'>Confirmar Senha</label>
                        </div>
                    </div>



                    <br />
                    <center>
                        <div class='row'>
                            <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect green'>Registrar</button>
                        </div>
                    </center>
                </form>
            </div>
        </div>
        <a asp-action="Login" asp-controller="Infra">Entrar</a>
    </center>

    <div class="section"></div>
    <div class="section"></div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}