@model GTD.Models.Dieta

@{
    ViewData["Title"] = "Editando Dieta";
}

<div class="main">
    <div class="indicador">
        <h2>Editando dieta: @Model.DietaNome</h2>
    </div>

    <form asp-action="Edit" class="frm wide">
        <div asp-validation-summary="ModelOnly" class="erro"></div>
        <input type="hidden" asp-for="DietaID" />

        <div class="linha">
            <label asp-for="SemanaID"></label>
            <select asp-for="SemanaID" class="form-control esquerda" asp-items="ViewBag.SemanaID"></select>
        </div>

        <label asp-for="DietaNome"></label>
        <input asp-for="DietaNome" class="form-control huge" placeholder="Nome da Dieta" />
        <span asp-validation-for="DietaNome" class="text-danger"></span>

        <label asp-for="DietaNome"></label>
        <input asp-for="Duracao" class="form-control huge" placeholder="Duração" />
        <span asp-validation-for="Duracao" class="text-danger"></span>

        <label asp-for="DataDieta"></label>
        <input asp-for="DataDieta" class="form-control huge" placeholder="Data de Início" />
        <span asp-validation-for="DataDieta" class="text-danger"></span>

        <label class="form-check-label">
            <input class="form-check-input" asp-for="Completo" /> @Html.DisplayNameFor(model => model.Completo)
        </label>

        <p>Escreva a sua dieta em markdown.</p>
        <textarea asp-for="DescDieta" class="form-control huge"></textarea>
        <span asp-validation-for="DescDieta" class="text-danger"></span>

        <p><span class="icone comentario"></span>Ajuda com markdown.</p>

        <div class="linha">
            <input type="submit" value="Salvar" class="bot" />
            <button type="button" class="bot bot-back" onClick="javascript:history.go(-1)">Voltar</button>
        </div>
    </form>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
