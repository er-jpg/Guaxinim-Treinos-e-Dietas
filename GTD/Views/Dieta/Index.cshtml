@model IEnumerable<GTD.Models.Dieta>

@{
    ViewData["Title"] = "Lista de Dietas";
}

<div class="main">
    <div class="indicador">
        <h2>Todas as Dietas</h2>
        <a asp-action="Create" class="criar-novo">
            <span class="icone criar"></span>
        </a>
    </div>

    <table class="table-fill">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DietaNome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duracao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataDieta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Completo)
                </th>
                <th>Operações</th>
            </tr>
        </thead>
        <tbody class="table-hover">
            @foreach (var item in Model)
            {
            <tr data-href="@Url.Action("Details", "Dieta", new { id = item.DietaID })">
                <td>
                    @Html.DisplayFor(modelItem => item.DietaNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duracao)
                </td>
                <th>
                    @Html.DisplayNameFor(modelItem => item.DataDieta)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Completo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DietaID"><span class="icone editar"></span></a>
                    @*<a asp-action="Details" asp-route-id="@item.PlanoID">Details</a> |*@
                    <a asp-action="Delete" asp-route-id="@item.DietaID"><span class="icone deletar"></span></a>
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>